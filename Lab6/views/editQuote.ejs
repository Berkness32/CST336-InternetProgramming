<%- include('partials/header.ejs') %>
<body>

  <h1 class="text-center mb-4">Updating Quote Data</h1>

    <form method="POST" action="/quotes/edit">

      <input type="hidden" name="quoteId" value="<%=quoteInfo[0].quoteId%>">

      <div class="form-group">
        <label for="quote">Quote:</label>
        <input type="text" class="form-control" id="quote" name="quote" value="<%= quoteInfo[0].quote %>">
      </div>

      <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" class="form-control" id="category" name="category" value="<%= quoteInfo[0].category %>">
      </div>

      <button type="submit" class="btn btn-primary">Update Quote</button>


    </form>
    

</body>
</html>