<%- include('partials/header.ejs') %>
<body>


  <div class="container mt-5">
    <h1 class="text-center mb-4">Update/Delete Quotes</h1>
    <% for (i = 0; i < quotes.length; i++) { %>
      <div class="card mb-3">
        <div class="card-body">
          <blockquote class="blockquote">
            <p class="mb-0"><%= quotes[i].quote %></p><br>
            <footer class="blockquote-footer"><i><%= quotes[i].lastName %></i></footer>
          </blockquote>
          <a href="/quotes/edit?quoteId=<%= quotes[i].quoteId %>" class="btn btn-sm btn-outline-primary mr-2">UPDATE</a>
          <a href="/quotes/delete?quoteId=<%= quotes[i].quoteId %>" class="btn btn-sm btn-outline-danger">DELETE</a>
        </div>
      </div>
    <% } %>
  </div>


</body>
</html>