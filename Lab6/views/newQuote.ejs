<%- include('partials/header.ejs') %>
<body>
  <h1 class="text-center mb-4">Adding a new Quote</h1>


  <form method="POST" action="/quotes/new">
    <div class="form-group">
      <label for="quote">Quote:</label>
      <input type="text" class="form-control" id="quote" name="quote">
    </div>

    <div class="form-group">
      <label for="authorId">Author:</label>
      <select class="form-control" id="authorId" name="authorId">
        <% for (i = 0; i < quotes.length; i++) { %>
          <option value="<%= quotes[i].authorId %>">
            <%= quotes[i].firstName %> <%= quotes[i].lastName %>
          </option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="category">Category:</label>
      <select class="form-control" id="category" name="category">
        <% for (i = 0; i < quotes.length; i++) { %>
          <option value="<%= quotes[i].category %>">
            <%= quotes[i].category %>
          </option>
        <% } %>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Quote</button>

  </form>

  <% if (typeof message != "undefined"){ %>
      <h3><%=message%></h3>
  <% } %>



</body>
</html>